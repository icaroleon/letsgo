<div class= "container mt-3">
  <div class ="devise-page">
    <div class="flex align-items-center justify-content-center">
      <section id="mobile" class="flex">
      </section>
      <section id="auth" class="flex direction-column">
        <div class="panel login flex direction-column">
          <h1 title="Lets Go" class="flex justify-content-center">
            <%= link_to "#", class: "logo" do %>
              <%= image_tag "new_logo.png", alt: "letsgo-logo", style: 'width: 220px;height: 150px' %>
            <% end %>
          </h1>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>
            <div class="form-inputs row">
            <div class="col-11">
              <%= f.input :email,
                label: false,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" },
                placeholder: "Email"%>
            </div>
              <div class="col-5">
                <%= f.input :password,
                  label: false,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" },
                  placeholder: "Senha"%>
              </div>
              <div class="col-5">
                <%= f.input :password_confirmation,
                  label: false,
                  required: true,
                  input_html: { autocomplete: "new-password" },
                  placeholder: "Confirmar senha"%>
              </div>
              <div class="col-5">
                <%= f.input :first_name,
                  label: false,
                  required: true,
                  input_html: { autocomplete: "given-name" },
                  placeholder: "Nome" %>
              </div>
              <div class="col-5">
                <%= f.input :last_name,
                  label: false,
                  required: true,
                  input_html: { autocomplete: "family-name" },
                  placeholder: "Sobrenome" %>
              </div>
              <div class="col-5">
                <%= f.input :username,
                  label: false,
                  required: true,
                  input_html: { autocomplete: "username" },
                  placeholder: "Username" %>
              </div>
              <div class="col-5">
                <%= f.input :bio,
                  required: true,
                  label: false,
                  placeholder: "Bio" %>
              </div>
              <div class="col-11">
                <h6 class="pb-2">Foto de perfil:</h6>
                <%= f.input :photo, as: :file, label: false %>
                <%= f.button :submit, "Sign up", class: "button" %>
              </div>
            </div>
            <div class="flex justify-content-center mt-2 hover-session">
              <%= link_to "Já tem uma conta? Faça login", new_user_session_path, class: "underline-text" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
