<div class= "container mt-3">
  <div class ="devise-page">
    <div class="flex align-items-center justify-content-center">
      <section id="mobile" class="flex">
      </section>
      <section id="auth" class="flex direction-column">
        <div class="panel login flex direction-column">
          <h1 title="Lets Go" class="flex justify-content-center">
            <%= link_to "#", class: "logo" do %>
              <%= image_tag "new_logo.png", alt: "letsgo-logo", style: 'width: 220px;height: 150px' %>
            <% end %>
          </h1>
          <h3>Cadastre-se</h3>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>
            <div class="form-inputs">
              <%= f.input :email,
                label: false,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" },
                placeholder: "Email"%>
              <%= f.input :password,
                label: false,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" },
                placeholder: "Senha"%>
              <%= f.input :password_confirmation,
                label: false,
                required: true,
                input_html: { autocomplete: "new-password" },
                placeholder: "Confirmar senha"%>
              <%= f.input :first_name,
                label: false,
                required: true,
                input_html: { autocomplete: "given-name" },
                placeholder: "Nome" %>
              <%= f.input :last_name,
                label: false,
                required: true,
                input_html: { autocomplete: "family-name" },
                placeholder: "Sobrenome" %>
              <%= f.input :username,
                label: false,
                required: true,
                input_html: { autocomplete: "username" },
                placeholder: "Username" %>
              <%= f.input :bio,
                required: true,
                label: false,
                placeholder: "Bio" %>
              <%= f.input :photo, as: :file, label: 'Foto de perfil' %>
              <%= f.button :submit, "Sign up", class: "button" %>
            </div>
          <% end %>
        </div>
        <div class="flex separator align-items-center">
          <span></span>
          <div class="or">OU</div>
          <span></span>
        </div>
        <div class="panel register-new-user flex direction-column align-items-center">
          <div class="flex justify-content-center">
            <%= "JÃ¡ tem uma conta?" %>
            <%= link_to "FaÃ§a login", new_user_session_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
