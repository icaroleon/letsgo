<div class="sidebar">
  <%= link_to home_path, class: 'text-decoration-none text-dark' do %>
    <i class="fab fa-gofore"></i>
  <% end %>
  <%= link_to home_path, class: 'text-decoration-none text-dark' do %>
    <div class="sidebar-option <%= 'active' if @sidebar == 'home' %>">
      <span class="material-icons"> home </span>
      <h2>Home</h2>
    </div>
  <% end %>
  <%= link_to events_path, class: 'text-decoration-none text-dark' do %>
    <div class="sidebar-option <%= 'active' if @sidebar == 'events' %>">
      <span class="material-icons"> search </span>
      <h2>Eventos</h2>
    </div>
  <% end %>
  <div class="sidebar-option">
    <span class="material-icons"> notifications_none </span>
    <h2>Notificações</h2>
  </div>
  <div class="sidebar-option">
    <span class="material-icons"> mail_outline </span>
    <h2>Mensagens</h2>
  </div>
  <div class="sidebar-option">
    <span class="material-icons"> perm_identity </span>
    <h2>Perfil</h2>
  </div>
  <%= link_to new_event_path, class: 'text-decoration-none text-dark' do %>
    <div class="sidebar-option <%= 'active' if @sidebar == 'new' %>">
      <span class="material-icons"> add_circle_outline </span>
      <h2>Criar Evento</h2>
    </div>
  <% end %>
  <div class="dropup">
    <div class="sidebar-option dropdown-toggle" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
      <div class="profile-info">
        <div class="post-avatar align-middle">
          <%= cl_image_tag current_user.photo.key, height: 50, width: 50%>
        </div>
        <div>
          <p class="username align-middle">@<%= current_user.username %></p>
        </div>
      </div>
      <div class="option-icon">
        <span class="fas fa-caret-down mt-3 dropdown-icon"> </span>
      </div>
    </div>
    <ul class="dropdown-menu dropdown-menu-end position-absolute nav-item" aria-labelledby="dropdownMenuButton1">
      <%= link_to "Meus eventos", "#", class: "dropdown-item" %>
      <%= link_to "Eventos que irei", check_ins_path, class: "dropdown-item" %>
      
        <%= link_to "Editar profile", edit_user_registration_path, class: "dropdown-item", id: "edit-profile-item" %>
        <%#<i class="fas fa-external-link-alt icon-external"></i>%>
       
      <%= link_to "Sair", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
    </ul>
  </div>
</div>
